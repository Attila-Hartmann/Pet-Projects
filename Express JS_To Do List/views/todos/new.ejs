<% layout('layouts/boilerplate') %>
<div class="row">
  <div class="col-6 offset-3 mb-2 rounded-3 new-container bg-white shadow">
    <h1 class="text-left mt-2">New To Do</h1>
    <form action="/todolist" method="POST" novalidate class="validated-form">
      <div class="mb-3">
        <label class="form-label" for="task">Task</label>
        <input
          class="form-control"
          type="text"
          id="task"
          name="task"
          pattern="^(?!\s*$).+"
          required
        />
        <div class="valid-feedback">Looks good!</div>
        <div class="invalid-feedback">Please provide a task!</div>
      </div>
      <div class="mb-3">
        <label class="form-label" for="time">Time</label>
        <input
          class="form-control"
          type="time"
          id="time"
          name="time"
          required
        />
        <div class="valid-feedback">Looks good!</div>
        <div class="invalid-feedback">Please provide a time for your task!</div>
      </div>

      <div class="mb-3">
        <label class="form-label" for="description">Description</label>
        <textarea
          class="form-control"
          type="text"
          id="description"
          name="description"
        ></textarea>
      </div>
      <div class="mb-3 d-flex justify-content-evenly">
        <button class="btn btn-success add-todo-button">
          <img
            class="add-todo"
            src="/assets/playlist_add_check_FILL0_wght400_GRAD0_opsz48.png"
            alt=""
          />
        </button>
        <a class="btn btn-success return-button" href="/todolist"
          ><img
            class="return"
            src="/assets/arrow_back_FILL0_wght400_GRAD0_opsz48.png"
            alt=""
        /></a>
      </div>
    </form>
  </div>
</div>
