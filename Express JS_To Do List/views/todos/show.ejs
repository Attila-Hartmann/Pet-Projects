<% layout('layouts/boilerplate') %>
<div class="row">
  <div class="col-6 offset-3 shadow p-0 show-card">
    <div class="card">
      <div class="card-body d-flex flex-column">
        <h5 class="card-title ms-3"><%=toDo.task%></h5>
        <div class="d-flex align-items-center justify-content-start ms-3">
          <img
            class="schedule-icon"
            src="/assets/schedule_FILL0_wght400_GRAD0_opsz48.png"
            alt=""
          />
          <h6 class="card-subtitle text-muted mt-0 ms-1"><%=toDo.time%></h6>
        </div>
        <p class="card-text mt-1 ms-3"><%=toDo.description%></p>
        <div class="mb-3 d-flex justify-content-evenly">
          <a
            class="btn btn-warning edit-page-button"
            href="/todolist/<%=toDo.id%>/edit"
            ><img
              class="edit-page-icon"
              src="/assets/edit_FILL0_wght400_GRAD0_opsz48.png"
              alt="edit to do"
          /></a>
          <form
            class="mx-1"
            action="/todolist/<%=toDo.id%>?_method=DELETE"
            method="POST"
            class="d-inline"
          >
            <button class="btn btn-danger delete-button">
              <img
                class="delete-item"
                src="/assets/delete_FILL0_wght400_GRAD0_opsz48.png"
                alt="show details"
              />
            </button>
          </form>
          <a class="btn btn-info return-tolist-button" href="/todolist"
            ><img
              src="/assets/list_FILL0_wght400_GRAD0_opsz48.png"
              class="return-tolist"
              alt="return to to do list"
          /></a>
        </div>
      </div>
    </div>
  </div>
</div>
